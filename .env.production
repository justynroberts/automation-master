# Production Environment Configuration
# DO NOT commit this file to version control

# Database Configuration
DB_HOST=database
DB_PORT=5432
DB_NAME=workflow_automation_prod
DB_USER=automation_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_IN_PRODUCTION

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_256_BIT_SECRET_KEY_IN_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_256_BIT_SECRET_KEY_IN_PRODUCTION
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# LLM Configuration
LLM_PROVIDER=claude
CLAUDE_API_KEY=sk-ant-your-claude-api-key-here
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Ollama Configuration (if using local LLM)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# Frontend Configuration
FRONTEND_URL=https://yourdomain.com
REACT_APP_API_URL=https://api.yourdomain.com/api

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD_IN_PRODUCTION

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Log Level
LOG_LEVEL=info

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5001
BACKEND_PORT=5001
FRONTEND_PORT=80

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Security Configuration
HELMET_CSP_ENABLED=true
CORS_ORIGIN=https://yourdomain.com

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Monitoring and Alerting
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERT_EMAIL=admin@yourdomain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Performance Tuning
MAX_CONCURRENT_EXECUTIONS=10
SANDBOX_TIMEOUT_MS=30000
DB_POOL_MIN=2
DB_POOL_MAX=20
REDIS_MAX_MEMORY=256mb

# Feature Flags
ENABLE_NODE_GENERATOR=true
ENABLE_WORKFLOW_EXECUTION=true
ENABLE_SANDBOX_EXECUTION=true
ENABLE_LLM_INTEGRATION=true
ENABLE_METRICS=true
ENABLE_SECURITY_HEADERS=true